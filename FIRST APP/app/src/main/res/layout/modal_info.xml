<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modalRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        tools:ignore="ExtraText">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#1B8708">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <ImageView
                    android:id="@+id/closeModalBtn"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:clickable="true"
                    android:contentDescription="Close"
                    android:focusable="true"
                    android:src="@drawable/ic_close_white" />

                <TextView
                    android:id="@+id/howItWorksTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/rock_salt"
                    android:text="How It Works"
                    android:textColor="#9CF245"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Description -->
                <TextView
                    android:id="@+id/howItWorksDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/croissant_one"
                    android:text="This app recommends vacation destinations based on your preferences:"
                    android:textColor="#98ED8D"
                    android:textSize="16sp" />

                <!-- Bullet Points -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/croissant_one"
                    android:text="• Choose your preferred weather, budget, and activity level."
                    android:textColor="#98ED8D"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/croissant_one"
                    android:text="• Tap 'Find My Vacation!' to get a personalized recommendation."
                    android:textColor="#98ED8D"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/croissant_one"
                    android:text="• View your destination and start planning your trip!"
                    android:textColor="#98ED8D"
                    android:textSize="17sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
